<div class="home pt-5">
	<div id="prez" class="d-flex">
		<%= image_tag("logo-square", :alt => "logo", :id => "logo") %>
		<h1>WORLD AFTER CRISIS</h1>
	</div>
</div>
<br>
<br>
<br>

<h2 class="text-center">Commit for the planet, like <%= @users.count %> other citizens of this world, and show them your solidarity. Let's start again with better habits.</h2>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-users="<%= @geojson.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

  <div class="search-bar d-flex flex-column mt-5">
    <h3 class="text-center"><%= label_tag "find a committed friend here:" %>
    
  	<div class="query-list d-flex justify-content-center align-items-centerflex-column w-100 mt-4"></div>
  </div>


<br>
<br>
<br>
<% @challenges.each do |challenge| %>
	<div class="chabox d-flex">	
		<img src="<%= challenge.badge %>" alt="#{challenge}">	
		<p class="pl-3"><%= challenge.title %></p>
	</div>
<% end %>